{
  "compilerOptions": {
    "rootDirs": ["src"],
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["lib", "node_modules"]
}
